<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAzureFieldIntel.View.AddEmployee">
  <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />

  <StackLayout Orientation="Vertical" Spacing="18">
    <Label Text="Title"></Label>
    <Entry Text="{Binding SelectedTaskModel.Name, Mode=TwoWay}"></Entry>

    <Label Text="Department"></Label>
    <Entry Text="{Binding SelectedTaskModel.Department, Mode=TwoWay}"></Entry>

    <Button Text="Post Task" Command="{Binding PostCommand}"></Button>
  </StackLayout>
</ContentPage>


